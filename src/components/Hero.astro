---
import { Github, Mail, Linkedin } from '@lucide/astro';
const year = new Date().getFullYear();
---

<section class="hero">
    <div class="hero-content">
        <div class="avatar">
            <img src="/avatar.jpeg" alt="Profile picture" />
        </div>

        <h1 class="hero-title">
            I am <strong>James Elner</strong>, a software engineer with a product mindset - curious,
            practical, and always learning
        </h1>

        <div class="social-links">
            <a href="https://github.com/JamesRepo">
                <Github />
            </a>
            <a href="https://www.linkedin.com/in/jameselner/">
                <Linkedin />
            </a>
            <a href="mailto:james.elner@yahoo.co.uk">
                <Mail />
            </a>
        </div>

        <footer class="hero-footer">
            <p>Â© {year} James Elner</p>
        </footer>
    </div>
</section>

<style>
    .hero {
        position: fixed;
        left: 0;
        top: 0;
        width: 35%;
        height: 100vh;
        background:
            linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
            url('/hero-background.jpeg') center/cover;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
    }

    .hero-content {
        padding: 2rem;
        max-width: 400px;
    }

    .avatar {
        width: 120px;
        height: 120px;
        margin: 2rem auto 2rem;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid rgba(255, 255, 255, 0.3);
    }

    .avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-title {
        font-size: 1.1rem;
        font-weight: 300;
        line-height: 1.8;
        margin-bottom: 2rem;
    }

    .hero-title strong {
        font-weight: 600;
    }

    .hero-title a {
        color: white;
        text-decoration: underline;
    }

    .social-links {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        margin-bottom: 3rem;
    }

    .social-links a {
        color: rgba(255, 255, 255, 0.7);
        transition: color 0.3s;
    }

    .social-links a:hover {
        color: white;
    }

    .icon {
        width: 24px;
        height: 24px;
    }

    .hero-footer {
        font-size: 0.8rem;
        color: rgba(255, 255, 255, 0.6);
    }

    .hero-footer a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
    }

    .hero-footer p {
        margin: 0.25rem 0;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .hero {
            position: relative;
            width: 100%;
            height: 100vh;
        }
    }
</style>
